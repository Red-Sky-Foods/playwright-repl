{
  "compilerOptions": {
    "target": "ES2020", // Adjust based on Node.js version compatibility
    "module": "CommonJS",
    "declaration": true, // Generates `.d.ts` files for type declarations
    "outDir": "./dist",
    "strict": true, // Enables all strict type-checking options
    "esModuleInterop": true, // Compatibility with CommonJS modules
    "skipLibCheck": true, // Skips checking of library declaration files
    "moduleResolution": "node",
    "sourceMap": true, // Useful for debugging with source maps
    "resolveJsonModule": true // Allows importing JSON files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
